<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/cardview_elevation"
    app:cardCornerRadius="@dimen/cardview_radius"
    app:cardBackgroundColor="@color/cardBGColor">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/regName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pramod SJ"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/regEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regName"
            android:text="pramodsinghjantwal@gmail.com"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regEmail"
            android:text="Event: CodeTrove"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text" />
    </RelativeLayout>

    <TextView
        android:id="@+id/regStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="paid"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text"
        android:padding="7dp"
        android:paddingLeft="7dp"
        android:background="@android:color/holo_green_light"
        android:layout_gravity="end"/>
    </FrameLayout>
</android.support.v7.widget.CardView>