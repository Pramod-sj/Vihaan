<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#212121">
            <ss.com.bannerslider.views.BannerSlider
                android:id="@+id/coreBanner"
                android:layout_width="match_parent"
                android:layout_height="230sp"
                app:animateIndicators="true"
                app:defaultIndicators="circle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="Core Team"
                android:textAlignment="center"
                android:background="#212121"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="#212121">

                <ss.com.bannerslider.views.BannerSlider
                    android:id="@+id/marketBanner"
                    android:layout_width="match_parent"
                    android:layout_height="230sp"

                    app:animateIndicators="true"
                    app:defaultIndicators="circle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:text="Marketing Team"
                    android:textAlignment="center"
                    android:background="#212121"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="#212121">
                <ss.com.bannerslider.views.BannerSlider
                    android:id="@+id/digitalBanner"
                    android:layout_width="match_parent"
                    android:layout_height="230sp"
                    app:animateIndicators="true"
                    app:defaultIndicators="circle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:text="Digital Promotion Team"
                    android:textAlignment="center"
                    android:background="#212121"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"

            android:layout_marginBottom="8sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="#212121">
                <ss.com.bannerslider.views.BannerSlider
                    android:id="@+id/creativeBanner"
                    android:layout_width="match_parent"
                    android:layout_height="230sp"
                    app:animateIndicators="true"
                    app:defaultIndicators="circle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:text="Creative Team"
                    android:textAlignment="center"
                    android:background="#212121"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>